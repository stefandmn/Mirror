[Unit]
Description=Clue Mirror
Before=multi-user.target
After=network.target local-fs.target
Wants=clue-picam.service clue-bridge.service clue-mcpi.service

[Service]
Type=simple
ExecStartPre=/sbin/modprobe evdev
ExecStart=/opt/clue/bin/mirror
KillMode=process

[Install]
WantedBy=multi-user.target
Alias=clue-mirror.service
